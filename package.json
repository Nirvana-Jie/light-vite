{
  "name": "light-vite-monorepo",
  "description": "Here is a light-vite",
  "private": "true",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "build": "pnpm -r --filter='./packages/*' run build"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "pnpm": {
    "overrides": {
      "light-vite": "workspace:*"
    }
  },
  "keywords": [
    "vite",
    "learning output"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/types": "^7.20.2",
    "@types/ws": "^8.5.3",
    "chalk": "^5.1.2",
    "esbuild": "^0.15.14",
    "eslint": "^8.28.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.16.1",
    "prettier": "^2.7.1",
    "rollup": "^3.3.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  }
}
